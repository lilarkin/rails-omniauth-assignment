<div class='field margin'>
  <% @locations.each do |location| %>
    <div class='card'>
      <h4><%= location.destination %></h4>

      <h5><%= location.travel_method %></h5>

      <%= link_to 'Show', trip_location_path(@trip, location), class: 'btn orange white-text' %>

      <%= link_to 'Address', location_addresses_path(location), class: 'btn orange white-text' %>
    </div>
  <% end %>
</div>

<%= link_to 'New Trip Location', new_trip_location_path(@trip, @location), class: 'btn orange white-text margin' %>

<%= link_to 'Back', :back, class: 'btn orange white-text margin' %>
