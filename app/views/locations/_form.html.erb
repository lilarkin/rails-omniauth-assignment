<%= form_for [@trip, @location] do |f| %>
  <div class='field margin'>
    <div class='card'>
      <%= f.label :destination %>
      <%= f.text_field :destination %>
    </div>

    <div class='card'>
      <%= f.label :travel_method %>
      <%= f.select :travel_method, (@travel_methods), {}, class: 'browser-default' %>
    </div>
  </div>
  
  <%= f.submit 'Submit', class: 'btn orange white-text margin'%>
<% end %>