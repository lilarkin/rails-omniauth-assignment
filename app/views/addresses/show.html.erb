<ul class='field margin'>
  <h3 class='card'>
    <li>Street: <%= @address.street %> </li>
  </h3>
  <h3 class='card'>
    <li>City: <%= @address.city %> </li>
  </h3>
  <h3 class='card'>
    <li>State: <%= @address.state %> </li>
  </h3>
  <h3 class='card'>
    <li>Zip: <%= @address.zip %> </li>
  </h3>
    <li>
      <%= link_to 'Edit', edit_location_address_path(@location, @address), class: 'btn orange white-text margin' %>
      <%= link_to 'Delete', location_address_path(@location, @address), method: :delete, data: {confirm: 'Really Delete?'},
          class: 'btn orange white-text margin' %>
    </li>
</ul>

<%= link_to 'Back', location_addresses_path(@location), class: 'btn orange white-text margin' %>
