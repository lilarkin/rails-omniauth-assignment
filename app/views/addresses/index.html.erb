<% if @address.nil? %>   
    <h3>No Address Found</h3>
    <%= link_to 'New Address', new_location_address_path(@location), class: 'btn orange white-text margin' %>
<% else %>
    <div class='field margin'>
      <div class='card'>
        <h4><%= @address.street %></h4>
        <h4><%= @address.city %>, <%= @address.state %> <%= @address.zip %></h4>
        <%= link_to 'Show', location_address_path(@location, @address), class: 'btn orange white-text' %>
      </div>
    </div>
<% end %>
<%= link_to 'Back', trip_locations_path(@location), class: 'btn orange white-text margin' %>
<%= link_to 'Home', :root, class: 'btn orange white-text margin' %>
