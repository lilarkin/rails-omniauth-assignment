<div class='field margin'>
  <% @trips.each do |trip| %>
    <div class='col s12 m3 card'>
      <h5><%= trip.name %></h5>
      <%= link_to 'Show', trip_path(trip), class: 'btn orange white-text margin' %>
      <%= link_to 'Locations', trip_locations_path(trip), class: 'btn orange white-text margin' %>
    </div>
  <% end %>
</div>

<%= link_to 'New Trip', new_trip_path, class: 'btn orange white-text margin' %>

<div class=''>
  <%= will_paginate @trip %>
</div>
