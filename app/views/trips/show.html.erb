<h1 class="center orange darken-2 white-text"> <%= @trip.name %> </h1>

<ul>
  <h3>
    <li>Name: <%= @trip.name %> </li>
  </h3>
  <li>
    <div class='btn orange white-text'>
      <%= link_to 'Edit', edit_trip_path(@trip) %>
      <br />
      </div>
      <div class='btn orange white-text'>
        <%= link_to 'Delete', trip_path(@trip), method: :delete, data: {confirm: 'Really Delete?'} %>
      </div>
  </li>
</ul>

<br />
<div class='btn orange white-text'>
  <%= link_to 'Back', trips_path %>
</div>
